vbell off
msgwait 1
defutf8 on
startup_message off
defscrollback 5000
altscreen on
autodetach off
hardstatus alwayslastline "%{= wk} %H : %{= wk}%-w%{= Kw}%n %t%{= wk}%+w"

multiuser on
acldel guest
chacl guest -r-w-x "#?"

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"
# tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm*|rxvt-unicode* 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defhstatus "screen ^E (^Et) | $USER@^EH"

# erase background with current bg color
defbce "on" 


deflogin "on"
shell -$SHELL

# Ctrl+A,X
bind q quit
bind u copy
bind s
bind 0 number 0
bind 1 number 1
bind 2 number 2
bind 3 number 3
bind 4 number 4
bind 5 number 5
bind 6 number 6
bind 7 number 7
bind k kill

bindkey ^[1 prev
bindkey ^[2 next
bindkey ^[q prev
bindkey ^[й prev
bindkey ^[w next
bindkey ^[ц next
bindkey ^[` other

# set the second mark, write to the screen-exchange
# file, and use xsel to synchronize the paste buffer
# with the X selection.
#bindkey -m > eval "stuff ' '" writebuf "exec sh -c 'xsel -n < ~/.screen_exchange'"

